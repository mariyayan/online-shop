{{>menu menuData=menuData showUserNavMenu=showUserNavMenu}}
<section id='sales' class='wrapper'>
    {{>switch-btns switchBtnsInfo=switchBtnsInfo}}
    <div id='sales-cards-container' class='flex cards-block-container'>
        {{#each products}}
        	{{>product-card product=this classes=true sales=true}}
        {{else}}
        	<p>По вашему запросу ничего не найдено</p>
        {{/each}}
    </div>
</section>